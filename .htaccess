# version:10.0
RewriteCond "%{DOCUMENT_ROOT}/$1/10.0" -d
RewriteRule "^(.+)/current-version(/.*|$)" "$1/10.0$2"

# the following version fallbacks are for APIs such as /developer/cloud versions

